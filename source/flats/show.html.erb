<% flat = data.flats[owner] %>

<div class="banner-show" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');height: 50vh;background-position: center;">
</div>


<div class="flat-id">
  <div class="flat-owner">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar-show " %>
    <p><%= owner %></p>
  </div>
  <div class="flat-title">
    <p><%= flat.description %></p>
    <p><%= flat.city_name %></p>
  </div>
</div>

<p><%= flat.name %></p>
